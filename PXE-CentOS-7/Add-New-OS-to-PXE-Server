
Add An Xubuntu ISO Image Taken-Using-RemasterSYS-Dist-Backup
================================================

# mkdir /FTP/Xubuntu-SVK-NIX
# mkdir -p /var/lib/tftpboot/images/Xubuntu-SVK-NIX/casper
# mount /dev/cdrom /media

# cp -ar /media* /FTP/Xubuntu-SVK-NIX
# cp -ar /media/.disk /FTP/Xubuntu-SVK-NIX

# cp /FTP/Xubuntu-SVK-NIX/casper/vmlinuz /var/lib/tftpboot/images/Xubuntu-SVK-NIX/casper/
# cp /FTP/Xubuntu-SVK-NIX/casper/initrd.gz /var/lib/tftpboot/images/Xubuntu-SVK-NIX/casper/

# ls -l /var/lib/tftpboot/images/Xubuntu-SVK-NIX/casper

# vi /etc/exports
...
/FTP/Xubuntu-SVK-NIX 222.0.0.0/24(ro,sync)
#

# vi /var/lib/tftpboot/pxelinux.cfg/default
...........
#######X-UBUNTU--An IMage Taken-Using-RemasterSYS-Dist-Backup####################
LABEL Xubuntu-SVK-NIX 14.04-x64
KERNEL images/Xubuntu-SVK-NIX/casper/vmlinuz
APPEND vga=normal boot=casper only-ubiquity netboot=nfs nfsroot=222.0.0.25:/FTP/Xubuntu-SVK-NIX/ initrd=images/Xubuntu-SVK-NIX/casper/initrd.gz ramdisk_size=32768
#


# systemctl restart dhcpd
# systemctl restart nfs
# systemctl restart xinetd
# systemctl restart vsftpd







