
=============================
	1.GParted
=============================

# mount /dev/cdrom /media

# mkdir /var/lib/tftpboot/images/gparted
# cp -ar /media/live/* /var/lib/tftpboot/images/gparted

# umount /media 

# ls -ap /var/lib/tftpboot/images/gparted
filesystem.packages         filesystem.squashfs  memtest
filesystem.packages-remove  initrd.img           vmlinuz
#


# vi /var/lib/tftpboot/pxelinux.cfg/default
......
#######GPARTED####################
label GParted Live-0.22
kernel images/gparted/vmlinuz
append initrd=images/gparted/initrd.img boot=live union=overlay username=user config components quiet noswap noeject vga=788 fetch=tftp://100.0.0.11/images/gparted/filesystem.squashfs
#


=============================
	2.CloneZilla
=============================

# mount /dev/cdrom /media

# mkdir /var/lib/tftpboot/images/clonezilla
# cp -ar /media/live/filesystem.squashfs /var/lib/tftpboot/images/clonezilla
# cp -ar /media/live/vmlinuz  /var/lib/tftpboot/images/clonezilla
# cp -ar /media/live/initrd.img  /var/lib/tftpboot/images/clonezilla

# umount /media 


# ls -p /var/lib/tftpboot/images/clonezilla
filesystem.packages         filesystem.squashfs  initrd.img  ipxe.lkn  vmlinuz
filesystem.packages-remove  freedos.img          ipxe.efi    memtest
[root@pxe-cent7 tftpboot]#

# vi /var/lib/tftpboot/pxelinux.cfg/default
..........
#######CLONEZilla#################
label Cloneclonezilla-2.4.2
kernel images/clonezilla/vmlinuz
append initrd=images/clonezilla/initrd.img boot=live union=overlay username=user config components quiet noswap edd=on nomodeset nodmraid noeject locales= keyboard-layouts= ocs_live_run="ocs-live-general" ocs_live_extra_param="" ocs_live_batch=no vga=788 ip=  nosplash i915.blacklist=yes radeonhd.blacklist=yes nouveau.blacklist=yes vmwgfx.enable_fbdev=1 fetch=tftp://100.0.0.11/images/clonezilla/filesystem.squashfs
#













